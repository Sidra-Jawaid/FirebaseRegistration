<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frag2"
    android:background="#fff"
    tools:context=".MainApplicationContent.SignUp">


    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Register Yourself "
        android:textSize="20dp"
        android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:src="@drawable/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="61dp"
            app:civ_border_color="#bcb7b7"
            app:civ_border_width="2dp"
             />

    <TextView
        android:id="@+id/tex0"
        android:layout_width="150dp"
        android:layout_height="34dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="-22dp"
        android:layout_marginTop="186dp"
        android:layout_toStartOf="@+id/profile_image"
        android:text="Enter Full name"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edittext0"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tex0"
        android:layout_alignEnd="@+id/edittext2"
        android:gravity="center"
        android:hint="type name"
        android:inputType="text" />

    <TextView
        android:id="@+id/tex1"
        android:layout_width="128dp"
        android:layout_height="34dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="244dp"
        android:layout_toStartOf="@+id/profile_image"
        android:text="Enter email"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edittext1"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tex1"
        android:layout_alignStart="@+id/edittext2"
        android:gravity="center"
        android:hint="type email"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edittext3"
        android:layout_alignStart="@+id/tex1"
        android:text="Enter Password"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edittext2"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text2"
        android:layout_toEndOf="@+id/text4"
        android:gravity="center"
        android:hint="type password"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edittext4"
        android:layout_alignStart="@+id/tex1"
        android:text="Re-Type Password"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edittext3"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text3"
        android:layout_alignStart="@+id/edittext1"
        android:gravity="center"
        android:hint="re-type password"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tex1"
        android:layout_marginBottom="151dp"
        android:text="Enter age"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edittext4"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text4"
        android:layout_alignStart="@+id/edittext1"
        android:gravity="center"
        android:hint="your age"
        android:inputType="number" />

    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="98dp"
        android:layout_toStartOf="@+id/profile_image"
        android:text="Select Country"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edittext1"
        android:layout_alignTop="@+id/text5" />

    <Button
        android:id="@+id/btnSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:text="Sign Up!!" />


</RelativeLayout>